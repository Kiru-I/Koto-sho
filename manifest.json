{
  "manifest_version": 3,
  "name": "JPWords",
  "version": "1.1",
  "description": "Highlight words to translate using Jisho API, and kanjiapi.dev for Kanjis meaning",
  "permissions": ["scripting"],
  "host_permissions": ["https://jisho.org/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/wanakana.min.js", "content.js"]
    }
  ]
}
